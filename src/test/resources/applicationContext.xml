<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="
           http://www.springframework.org/schema/mvc
           http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd
           http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-4.0.xsd
           http://www.springframework.org/schema/tx
           http://www.springframework.org/schema/tx/spring-tx-4.0.xsd">

    <!-- Skanuj klasy z adnotacjami w pakiecie 'pl.microblog' -->
    <context:component-scan base-package="pl.microblog" />

    <!-- Włączenie obsługi adnotacji, takich jak @Autowired, @PostConstruct itd. -->
    <context:annotation-config />

    <!-- Konfiguracja źródła danych (DataSource) dla HSQLDB -->
    <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <!-- Klasa sterownika JDBC dla HSQLDB -->
        <property name="driverClassName" value="org.hsqldb.jdbc.JDBCDriver" />
        <!-- URL połączenia z bazą danych HSQLDB -->
       <property name="url" value="jdbc:hsqldb:mem:testdb" />
        <!-- Użytkownik bazy danych -->
        <property name="username" value="sa" />
        <!-- Hasło do bazy danych -->
        <property name="password" value="" />
    </bean>

    <!-- Konfiguracja EntityManagerFactory -->
    <tx:annotation-driven /> <!-- Włącza obsługę transakcji z adnotacjami -->

   <bean id="entityManagerFactoryBean"
      class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean">

    <property name="dataSource" ref="dataSource" />

    <property name="packagesToScan" value="pl.microblog.model" />

    <property name="jpaVendorAdapter">
        <bean class="org.springframework.orm.jpa.vendor.HibernateJpaVendorAdapter">
            <property name="showSql" value="true" />
            <property name="databasePlatform" value="org.hibernate.dialect.HSQLDialect" />
        </bean>
    </property>

    <property name="jpaProperties">
        <props>
            <prop key="hibernate.hbm2ddl.auto">create</prop>
        </props>
    </property>

</bean>


    <!-- Konfiguracja PersistenceAnnotationBeanPostProcessor do obsługi adnotacji JPA -->
    <bean class="org.springframework.orm.jpa.support.PersistenceAnnotationBeanPostProcessor" />

    <!-- Konfiguracja wyjątku dla JPA -->
    <bean class="org.springframework.dao.annotation.PersistenceExceptionTranslationPostProcessor" />

    <!-- Konfiguracja TransactionManager -->
    <bean id="transactionManager" class="org.springframework.orm.jpa.JpaTransactionManager">
        <property name="entityManagerFactory" ref="entityManagerFactoryBean" />
    </bean>

</beans>